@model ElectronicStore.Models.Post

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   
        <legend>Post</legend>

        <body>Title</body>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

       <body>Author</body>
        <div class="editor-field">
            @Html.EditorFor(model => model.author)
            @Html.ValidationMessageFor(model => model.author)
        </div>

      
       
           <div class="editor-label">
            @Html.LabelFor(model => model.date)
        </div>
           
        <div class="editor-field">
            @Html.EditorFor(model => model.date)
            @Html.TextBox("date", DateTime.Now)
            @Html.ValidationMessageFor(model => model.date)
        </div>
       <div class="editor-label">
            @Html.LabelFor(model => model.body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.body, 10, 50, new object { })
            @Html.ValidationMessageFor(model => model.body)
        </div>

                      <div class="editor-label">
            @Html.LabelFor(model => model.likes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.likes)
            @Html.ValidationMessageFor(model => model.likes)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.dislikes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dislikes)
            @Html.ValidationMessageFor(model => model.dislikes)
        </div>
    
      <body>Upload</body>
         <div class="editor-label">
            @Html.LabelFor(model => model.image)
        </div>
        <div class="editor-field"> 
           
            <input type="file" name="file" />
            @Html.ValidationMessageFor(model => model.image)
        </div>

      <p>
            <input type="submit" value="Create" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
